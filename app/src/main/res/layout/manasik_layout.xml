<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:chainUseRtl="true"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    app:cardCornerRadius="13dp"
    android:layout_margin="11sp"

    >

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

     <TextView
         android:id="@+id/tvStepsOfHaj"
         android:layout_width="wrap_content"
         android:layout_height="44dp"
         android:text="احرام"
         android:textColor="@android:color/holo_blue_bright"
         android:textSize="38dp"
         android:textStyle="bold"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <TextView
         android:id="@+id/tvStepsDetails"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="7dp"
         android:layout_marginTop="4dp"
         android:layout_marginRight="7dp"
         android:ellipsize="end"
         android:gravity="center"
         android:maxLines="2"
         android:minLines="2"
         android:text="@string/layout_text"
         android:textColor="@android:color/black"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.538"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tvStepsOfHaj" />

     <ImageView
         android:id="@+id/ivManasikPic"

         android:layout_width="match_parent"
         android:layout_height="118dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tvStepsDetails"
         app:srcCompat="@drawable/images" />
 </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>